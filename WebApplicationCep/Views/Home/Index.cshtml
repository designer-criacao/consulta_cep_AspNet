@using WebApplicationCep.Models;
@model Cep
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET - Web Service Cep</h1>
    <p class="lead">Consultando CEP nos correios com ASP.NET.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-3">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {


            <div class="form-group">


                <div class="input-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control" })
                    <span class="input-group-btn">
                        <input type="submit" value="Buscar" class="btn btn-default" />
                    </span>
                </div>


            </div>




            <div>
                @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger" })
            </div>


        }

        @{
            if (ViewBag.Endereco != null)
            {
                @ViewBag.Endereco.Descricao @ViewBag.Endereco.Complemento

                @ViewBag.Endereco.Bairro

                @ViewBag.Endereco.Cidade

                @ViewBag.Endereco.UF
            }
        }
    </div>
</div>

